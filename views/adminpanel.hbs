<header>
    <!-- As a heading -->
    <nav class="navbar navbar-light bg-gradient bg-primary">
        <span class="navbar-brand mb-0 h1 p-2 ms-4" id="titl" style="font-weight: 400; color:aliceblue">
            {{#if admin}}
            {{admin}}
            {{/if}}
        </span>
            <a class="btn btn-info bg-gradient p-1 me-3" style="color:aliceblue;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;" href="/admin/logout" type="button">Logout</a>
